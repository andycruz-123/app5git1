   </description>  
   
   <author href="https://build.phonegap.com" email="cb16.paredez.mendez.andy.1f@gmail.com">  
       Andy Cruz Paredez Mendez
   </author>  
    
   <!-- Personaliza la aplicacion y plataforma  -->
   <!-- <preference name="orientation" value="defaul/> -->  
